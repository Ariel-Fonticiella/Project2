<h2> Judge List </h2>

<div class="flex-container judge button">
  <a class="btn btn-primary btn-white2" href="/judges/new"> Add a New Judge </a>
</div>
<br />
<br />

<div class="flex-container rows-wrap">
  <div class="flex-container row1 ">
    <% listOfJudges.forEach((oneJudge) => { %>
      <div class="flex-container card-container">
        <h3 class="about-p"> <%= oneJudge.name %> </h3>
        <img src="<%= oneJudge.imageUrl %>" class="card-name judgePic" />
        <div class="flex-container content-wrapper">
          <div class="card-content">

            <p class="about-p">
              Circuit:
              <%= oneJudge.circuit %> <br /> Description: <b><%= oneJudge.description %></b>
            </p>

            <div class="flex-container judge-btn">
              <a href="/judges/<%= oneJudge._id %>">
                      View Judge Details
                    </a>

              <a href="/judges/<%= oneJudge._id %>/edit">
                      Edit This Judge
                    </a>

              <a href="/judges/<%= oneJudge._id %>/delete">
                      Delete This Judge
                    </a>

            </div>
            <!-- judge-btn -->
          </div>
          <!-- Card Content -->
        </div>
        <!-- Content Wrapper -->
      </div>
      <!-- Card Container -->
      <% }) %>
  </div>
</div>

