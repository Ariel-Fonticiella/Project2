<h2> Judge List </h2>

<a href="/judges/new"> Add a New Judge </a>

<ul>
  <% listOfJudges.forEach((oneJudge) => { %>
    <li>
      <h3> <%= oneJudge.name %> </h3>
      <p> $<%= oneJudge.circuit %> </p>
      <img src="<%= ooneJudge.imageUrl %>" />
      <ul>
        <li>
          <!-- <a href="/judges/details?judgeId=<%= oneJudge._id %>"> -->
