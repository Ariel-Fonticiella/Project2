<h2> Sign Up </h2>

<% if (typeof errorMessage !== "undefined") { %>
  <p class="error-message">
    <%= errorMessage %>
  </p>
  <% } %>

    <div class="box">
      <form id="form" method="post" action="/process-signup">
        <label for="user-name-input"> User Name </label>
        <input id="user-name-input" type="text" placeholder="e.g. Boblob Law" name="signupUserName" />
        <br />
        <br />
        <label for="password-input"> Password </label>
        <input id="password-input" type="password" placeholder="e.g. BobLobLawLobsALawBomb!" name="signupPassword" />
        <br />
        <br />
        <label for="email-input"> Email </label>
        <input id="email-input" type="email" placeholder="e.g. Boblob@Law.com" name="signupEmail" />
        <br />
        <br />

        <div class="button">
          <button class="btn btn-primary btn-white"> Sign Up </button>
        </div>
      </form>
    </div>
    <p class="sign-up">
      <b>Already have an account?</b>
      <a class="btm-reg" href="/login"> Log In! </a>
    </p>
