<h2> Edit Your Profile </h2>
<div class="flex-container profileWrap">
<br />
  <div class="lower">

    <p>
      Your avatar:
      <br />
      <br />
      <img src="<%= currentUser.avatar %>" />
    </p>
  </div>
</div>

<div class="form">
                                                  <!-- for file uploads -->
                                                            |
<form id="form" method="post" action="/settings" enctype="multipart/form-data">
  <label for="user-name-input"> User Name </label>
  <input id="user-name-input" type="text" placeholder="e.g. Justice"
    name="editUserName" value="<%= currentUser.userName %>" />
  <br />

  <label for="avatar-input"> Change Your Avatar </label>
  <input id="avatar-input" type="file" name="editAvatar" />
  <br />

  <button> Save Changes </button>
</form>
</div>
